package practice1;

public class MyDate {

	private int day;
	private int month;
	private int year;
	
	boolean isValid = true;
	
	public MyDate(int day, int month, int year) {
		setDay(day);
		setMonth(month);
		setYear(year);
	}
	
	public void setDay(int day) {
		this.day = day;
	}
	
	public void setMonth(int month) {
		this.month = month;
	}
	
	public void setYear(int year) {
		this.year = year;
	}
	
	public int getDay() {
		return this.day;
	}
	
	public int getMonth() {
		return this.month;
	}
	
	public int getYear() {
		return this.year;
	}
	
	public void showDateInfo() {
		System.out.println(year + "년 " + month + "월 " + day + "일 입니다.");
	}
	
	
}
