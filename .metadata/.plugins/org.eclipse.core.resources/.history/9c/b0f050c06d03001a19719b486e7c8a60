package ifexample;

import java.util.Scanner;

public class Question2 {

	public static void main(String[] args) {
		//make diamonds.
		
		Scanner scanner = new Scanner(System.in);
		
		int n = scanner.nextInt();
		
		for (int i = 0; i < n; i++) {
			
			for (int j = i; j < 3; j++) {
			
				System.out.println('*');
				
			}
			
			System.out.println();
			
		}
		
		
	}

}
