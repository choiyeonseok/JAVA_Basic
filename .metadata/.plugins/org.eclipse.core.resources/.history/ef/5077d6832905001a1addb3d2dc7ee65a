package practice;

import java.io.IOException;

public class SortTest {

	public static void main(String[] args) throws IOException {
		
		int ch = System.in.read();
		
		Sort sort = null;
		if(ch == 'B' || ch == 'b') {
			sort =  new BubbleSort();
		}
		else if(ch == 'Q' || ch == 'q') {
			sort =  new QuickSort();
		}
		else if(ch == 'H' || ch == 'h') {
			sort =  new HeapSort();
		}
		
		sort.ascending();
		sort.descending();
		sort.description();
		sort.showInfo();
		
	}

}
