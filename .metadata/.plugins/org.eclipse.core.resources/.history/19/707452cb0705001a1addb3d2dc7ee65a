package paractice;

public class Player {
	
	PlayerLevel level;
	
	public Player() {
		level = new BeginnerLevel();
		level.showLevelMessage();    //player처음 생성 시 초급자부터 시작
	}
	
	
	public PlayerLevel getLevel() {
		return level;
	}
	
	public void upgradeLevel(PlayerLevel level) {
		this.level = level;
		level.showLevelMessage();
	}
	
	public void play(int n) {
		level.go(n);
	}
	
}
